<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora_IMC_CAAR.Views.EmployeePage"
             xmlns:local="clr-namespace:Calculadora_IMC_CAAR.ViewModels"
             Title="EmployeePage">
    
    
    <VerticalStackLayout>
        <Label Text="Ingresa nombre empleado:"/>

        <Entry Text="{Binding EmpName}"/>
        <Label Text="{Binding EmpName}"
               VerticalOptions="Center"
               FontSize="Large"/>


        <Button Text="Guardar" Command="{Binding GuardarCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>